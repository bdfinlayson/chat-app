      .container
        h1 The Chat Room

        form.logout
          input(id='logoutButton' type='button' value='logout')

        form.find
          input(id='findMessage' type='text' placeholder='search messages')
          input(id='findButton' type='button' value='find')

        form.login
          input(id='user' type='text' placeholder='enter username')
          input(id='password' type='text' placeholder='enter passoword')
          input(id='loginButton' type='button' value='login')
          input(id='registerButton' type='button' value='register')



        form.chat
          div(id='userName')
          input(id="userMessage" type="text" placeholder="enter message")
          input(id="submitButton" type="button" value="submit")

        div(id="chatWrapper")
          div(id="chatWindow")
            table
              tbody

